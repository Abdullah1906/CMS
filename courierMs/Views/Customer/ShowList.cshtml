                        <th scope="col">Sender Id</th>
                        <th scope="col">Reciever Id</th>
                        <th scope="col">Action</th>


                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.PList != null && ViewBag.PList.Count > 0)
                    {
                        foreach (var Plist in ViewBag.PList)
