@model courierMs.ViewModel.MultiModelVM
@{
    ViewData["Title"] = "ShowList";

}


<div class="col-md-10">
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-secondary text-white text-center">
            <h4 class="mb-0">List of Sender</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered text-center align-middle" id="lookupTable">
                <thead class="text-white bg-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Note</th>
                        <th scope="col">City</th>
                        <th scope="col">Action</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Customerinfo != null)
                    {
                        <tr>
                            <td>@Model.Customerinfo.S_Name</td>
                            <td>@Model.Customerinfo.S_PhoneNumber</td>
                            <td>@Model.Customerinfo.S_Email</td>
                            <td>@Model.Customerinfo.S_Address</td>
                            <td>@Model.Customerinfo.S_Note</td>
                            <td>@Model.Customerinfo.S_city</td>


                            <td>
                                <button type="button" id="GetupdateButton" class="btn btn-outline-primary btn-lg " data-id="@Model.Customerinfo.Id">Update</button>
                                <button type="button" id="deleteButton" class="btn btn-outline-danger btn-lg" data-id="@Model.Customerinfo.Id">Delete</button>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-10">
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-secondary text-white text-center">
            <h4 class="mb-0">List of Receiver</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered text-center align-middle" id="lookupTable">
                <thead class="text-white bg-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Note</th>
                        <th scope="col">City</th>
                        <th scope="col">Action</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Customerinfo != null)
                    {
                        <tr>
                            <td>@Model.Customerinfo.R_Name</td>
                            <td>@Model.Customerinfo.R_PhoneNumber</td>
                            <td>@Model.Customerinfo.R_Email</td>
                            <td>@Model.Customerinfo.R_Address</td>
                            <td>@Model.Customerinfo.R_Note</td>
                            <td>@Model.Customerinfo.R_city</td>


                            <td>
                                <button type="button" id="GetupdateButton" class="btn btn-outline-primary btn-lg " data-id="@Model.Customerinfo.Id">Update</button>
                                <button type="button" id="deleteButton" class="btn btn-outline-danger btn-lg" data-id="@Model.Customerinfo.Id">Delete</button>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-secondary text-white text-center">
            <h4 class="mb-0">Percel Details</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered text-center align-middle" id="lookupTable">
                <thead class="text-white bg-dark">
                    <tr>
                        <th scope="col">Percel Type</th>
                        <th scope="col">Weight</th>
                        <th scope="col">Price</th>
                        <th scope="col">Note</th>
                        <th scope="col">Sender Id</th>
                        <th scope="col">Reciever Id</th>
                        <th scope="col">Action</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Percelinfo!=null)
                    {

                            <tr>
                                <td>@Model.Percelinfo.ParcelType</td>
                                <td>@Model.Percelinfo.Weight</td>
                                <td>@Model.Percelinfo.Price</td>
                                <td>@Model.Percelinfo.Note</td>
                                <td>@Model.Percelinfo.SenderId</td>
                                <td>@Model.Percelinfo.ReceiverId</td>
                                

                                <td>
                                    <button type="button" id="GetupdateButton" class="btn btn-outline-primary btn-lg " data-id="@Model.Percelinfo.Id">Update</button>
                                    <button type="button" id="deleteButton" class="btn btn-outline-danger btn-lg" data-id="@Model.Percelinfo.Id">Delete</button>
                                </td>


                            </tr>
                        
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-muted">No data available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

