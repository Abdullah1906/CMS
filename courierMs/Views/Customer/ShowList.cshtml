                                <td>@Plist.Weight</td>
                                <td>@Plist.Price</td>
                                <td>@Plist.Note</td>
                                <td>@Plist.SenderId</td>
                                <td>@Plist.ReceiverId</td>
                                

                                <td>
                                    <button type="button" id="GetupdateButton" class="btn btn-outline-primary btn-lg " data-id="@Plist.Id">Update</button>
                                    <button type="button" id="deleteButton" class="btn btn-outline-danger btn-lg" data-id="@Plist.Id">Delete</button>
