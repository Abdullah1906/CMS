@model courierMs.DataModel.Lookup

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center display-5">Create Lookup Table</h1>


<div class="row">
    <div class="col-md-12">
        <div class="align-items-start  pt-5">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Lookup Information</h3>
                    </div>
                    <div class="card-body">
                        <form id="LookupForm">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="Type" class="form-label">Type</label>
                                    <input id="Id" type="hidden" class="form-control" placeholder="" />
                                    <input id="Type" type="text" class="form-control" placeholder="Enter Type" required />

                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="Name" class="form-label">Name</label>
                                    <input id="Name" type="text" class="form-control" placeholder="Enter Name" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="Value" class="form-label">Value</label>
                                    <input id="Value" type="text" class="form-control" placeholder="Enter Value" required />
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="Serial" class="form-label">Serial</label>
                                    <input id="Serial" type="number" class="form-control" placeholder="Enter Serial" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="control-label">Is Active</label>
                                    <select class="form-control" id="IsActive" required>
                                        <option value="-1">Select one</option>
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>
                                    </select>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="button" id="submitButton" class="btn btn-primary btn-lg">Submit</button>
                                <button type="button" id="submitUpdateButton" class="btn btn-primary btn-lg">Confirm Update</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-12">
        <br/>
        <br/>
        <br/>
        <br/>
        <div class="card shadow-lg mb-4">
            <div class="card-header bg-secondary text-white text-center">
                <h4 class="mb-0">Lookup Data</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered text-center align-middle" id="lookupTable">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Serial</th>
                            <th scope="col">Value</th>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">IsActive</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.List != null && ViewBag.List.Count > 0)
                        {
                            foreach (var city in ViewBag.List)
                            {
                                <tr>
                                    <td>@city.Serial</td>
                                    <td>@city.Value</td>
                                    <td>@city.Name</td>
                                    <td>@city.Type</td>
                                    <td>@(city.IsActive ? "Yes" : "No")</td>
                                  
                                    <td>
                                        <button type="button" id="GetupdateButton" class="btn btn-success btn-lg " data-id="@city.Id">Update</button>
                                        <button type="button" id="deleteButton" class="btn btn-success btn-lg" data-id="@city.Id">Delete</button>
                                    </td>
                                   

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted">No data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/js/alert.js"></script>


<script>


    // getupdatebutton

    $(document).on('click', '#GetupdateButton', function () { //  is used to attach event handlers to dynamically added all delete elements
        var id = $(this).data('id');
        debugger;
        
        var lookupData = {
            Id: id,

        };
        console.log(lookupData);
        

        $.ajax({
            url: '@Url.Action("GetUpdateLookup", "Customer")',
            type: 'POST',
            data: lookupData,
            success: function (response) {
                Swal.fire("Updated!", "The item has been Updated.", "success");

                console.log(response.data);

                $('#Type').val(response.data.type);
                $('#Id').val(response.data.id);
                $('#Name').val(response.data.name);
                $('#Value').val(response.data.value);
                $('#Serial').val(response.data.serial);
                $('#IsActive').val(response.data.isActive);


                // document.getElementById("Type").value=response.data.type;
                // document.getElementById("Name").value =response.data.name;
                // document.getElementById("Value").value = response.data.value;
                // document.getElementById("IsActive").value = response.data.isActive;

                if (response.data.isActive === true) {
                    $('#IsActive option').filter(function () {
                        return $(this).text() === 'Yes';
                    }).prop('selected', true);
                } else if (response.data.isActive === false) {
                    $('#IsActive option').filter(function () {
                        return $(this).text() === 'No';
                    }).prop('selected', true);
                } else {
                    $('#IsActive').val('-1');
                }


                
            },
            error: function () {
                swal.fire("Error!");
            }

        })



    });

    // deletebutton

    $(document).on('click', '#deleteButton', function () { //  is used to attach event handlers to dynamically added all delete elements
        var id = $(this).data('id');

        var lookupData = {
            Id: id,

        };
        console.log(lookupData);

        $.ajax({
            url: '@Url.Action("DeleteLookup", "Customer")',
            type: 'POST',
            data: lookupData,
            success: function (receive) {
                

                if (receive.success) {
                    Swal.fire("Deleted!", "The item has been deleted.", "success");
                    $('#lookupTable tbody').find('button[data-id="' + id + '"]').closest('tr').remove();
                }
            },
            error: function () {
                swal.fire("Error!");
            }

        })



    });




    $(document).ready(function () {

        //submitbutton

        $("#submitButton").click(function () {


            var lookupData = {
                Type: $('#Type').val(),
                Name: $('#Name').val(),
                Value: $('#Value').val(),
                Serial: $('#Serial').val(),
                IsActive: $('#IsActive').val(),
            };
            console.log(lookupData);

            $.ajax({
                url: '@Url.Action("CreateLookup", "Customer")',
                type:'POST',
                data: lookupData,
                success: function (response) {
                    Swal.fire("Done!");


                        var newRow = `

                                <tr>
                                <td>${response.data[response.data.length - 1].serial}</td>
                                <td>${response.data[response.data.length - 1].value}</td>
                                <td>${response.data[response.data.length - 1].name}</td>
                                <td>${response.data[response.data.length - 1].type}</td>
                                <td>${response.data[response.data.length - 1].isActive ? 'Yes' : 'No'}</td>

                                <td>
                                    <button type="button" id="GetupdateButton" class="btn btn-success btn-lg " data-id="${response.data[response.data.length - 1].id}">Update</button>
                                    <button type="button" id="deleteButton" class="btn btn-success btn-lg" data-id="${response.data[response.data.length - 1].id}">Delete</button>
                                </td>


                                </tr>
                    
                    
                    `;

                        $('#lookupTable tbody').append(newRow);
                        $('#LookupForm')[0].reset();

                },
                error: function () {
                    swal.fire("Failed!");
                }

            })



        });


        //confirmedupdatebutton

        $("#submitUpdateButton").click(function () {
             //var lookupId = $('#Id').val()
            // console.log(lookupId);

            // if (!lookupId) {
            //     Swal.fire("Error", "Can't update without a valid ID", "error");
            //     return;
            // }


            var lookupData = {
                Id: $('#Id').val(),
                Type: $('#Type').val(),
                Name: $('#Name').val(),
                Value: $('#Value').val(),
                Serial: $('#Serial').val(),
                IsActive: $('#IsActive').val(),
            };
            console.log(lookupData);

            $.ajax({
                url: '@Url.Action("UpdateLookup", "Customer")',
                type: 'POST',
                data: lookupData,
                success: function (response) {
                    Swal.fire("Done!");
                    if (response.success) {

                        $('#lookupTable tbody').find('button[data-id="' + lookupId + '"]').closest('tr').remove();

                        if (response && response.data && Array.isArray(response.data) && response.data.length > 0) {

                            var lastIndex = response.data.length - 1;

                            var newRow =
                                `
                               <tr>
                                        <td>${response.data[lastIndex].serial}</td>
                                        <td>${response.data[lastIndex].value}</td>
                                        <td>${response.data[lastIndex].name}</td>
                                        <td>${response.data[lastIndex].type}</td>
                                        <td>${response.data[lastIndex].isActive ? 'Yes' : 'No'}</td>

                                    <td>
                                        <button type="button" id="GetupdateButton" class="btn btn-success btn-lg " data-id="${response.data[response.data.length - 1].id}">Update</button>
                                        <button type="button" id="deleteButton" class="btn btn-success btn-lg" data-id="${response.data[response.data.length - 1].id}">Delete</button>
                                    </td>


                                </tr>
                        
                        
                        `

                                ;

                            $('#lookupTable').append(newRow);
                            $('#LookupForm')[0].reset();
                        }
                        else {
                            console.error('Invalid response data:', response);
                            Swal.fire("Failed!", "Invalid response data.", "error");
                        }
                    }

                },
                error: function () {
                    swal.fire("Failed!");
                }

            })



        });





    });


</script>