@model courierMs.ViewModel.MultiModelVM


@{
    ViewData["Title"] = "Invoice";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Invoice Print</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/css/invoice.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

     <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .wrapper {
            flex: 1;
            padding: 10px; 
        }

        .invoice {
            width: 100%; 
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }
        
        .table, .table th, .table td {
            border-top: 2px solid #000; 
            border-bottom: 2px solid #000; 
            border-collapse: collapse;  
            padding: 10px; 
            box-shadow: none; 
            margin: 0; 
        }

        .signature-line {
            height: 2px; 
            background-color: #000;
            margin: 10px 0; 
        }
    </style> 
</head>

<body>
    <header>
        <img src="~/img/Header.png" width="100%" alt="Header Image" />
    </header>
    <br />
    <div class="wrapper">
        <section class="invoice">
            
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i class="fas fa-globe"></i>
                    </h2>
                </div>
            </div>
            <br />
            
            <div class="row invoice-info mb-4">
                <div class="col-sm-4 invoice-col">
                    Company Details
                    <address>
                        @CompanyAddress.Company<br />
                        @CompanyAddress.Address<br>
                        @CompanyAddress.Phone<br>
                        @CompanyAddress.Email
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                       Name: @Model.Customerinfo.Name<br>
                       Address: @Model.Customerinfo.Address<br>
                       Phone: @Model.Customerinfo.PhoneNumber<br />
                       Phone: @Model.Customerinfo.Email
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        Name: @Model.ReceiverInfo.Name<br>
                        Address: @Model.ReceiverInfo.Address<br>
                        Phone: @Model.ReceiverInfo.PhoneNumber<br />
                        Phone: @Model.ReceiverInfo.Email
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    <b>Invoice# @Model.Invoice.InvoiceId</b><br>
                    <b>Date: @Model.Invoice.Date</b><br />
                     Printed By: @Model.Invoice.Email
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-5">PercelType</th>
                                <th class="col-1 text-end">Note</th>
                                <th class="col-2 text-end">Weight</th>
                                <th class="col-2 text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                                <tr>
                                    <td class="col-5">@Model.Percelinfo.ParcelType</td>
                                    <td class="col-1 text-end">@Model.Percelinfo.Note</td>
                                    <td class="col-2 text-end">@Model.Percelinfo.Weight</td>
                                    <td class="col-2 text-end">@Model.Percelinfo.Price</td>
                                    
                                </tr>
                            
                        </tbody>
                    </table>

                    <div>
                        Total Ammount In Word: <strong>@NumberToWords.ConvertToWords(Model.Percelinfo.Price)</strong>
                    </div>
                    
                </div>
            </div>
        </section><br />
        <div class="signature-section col-3 float-right text-center">
            <div class="signature-line"></div>
            <div>Signature</div>
        </div>
    </div>

    <footer class="border-top footer text-muted text-center">
        <img src="~/img/Footer.png" width="100%" alt="Footer Image" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>

