@model courierMs.ViewModel.MultiModelVM

@{
    ViewData["Title"] = "Create";
}




<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-center align-items-start min-vh-100">
            <div class="col-md-12">
                <div class="card shadow-lg">
                    <div class="card-header text-white text-center " style="background-color:#54a0ff">
                        <h1 class="mb-0 display-5">Create Customer & Parcel Info</h1>
                    </div>
                    <div class="card-body" id="price-items">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 mr-5">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <h3 class="mb-0 text-center text-dark">Sender Information</h3>
                                                <hr />
                                                <label asp-for="Customerinfo.Name" class="control-label">Sender Name</label>
                                                <input asp-for="Customerinfo.Name" id="name" class="form-control" placeholder="Enter Sender Name" />
                                                <input asp-for="Customerinfo.Id" id="Id" name="Id" hidden />
                                                <span asp-validation-for="Customerinfo.Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <h3 class="mb-0 text-center text-dark">Receiver Information</h3>
                                                <hr />
                                                <label asp-for="ReceiverInfo.Name" class="control-label">Reciever Name</label>
                                                <input asp-for="ReceiverInfo.Name" id="name1" class="form-control" placeholder="Enter Reciever Name" />
                                                <span asp-validation-for="ReceiverInfo.Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Customerinfo.PhoneNumber" class="control-label">Phone Number</label>
                                                <input asp-for="Customerinfo.PhoneNumber" id="p_number" class="form-control" placeholder="Enter Sender Number" />
                                                <span asp-validation-for="Customerinfo.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ReceiverInfo.PhoneNumber" class="control-label">Phone Number</label>
                                                <input asp-for="ReceiverInfo.PhoneNumber" id="p_number1" class="form-control" placeholder="Enter Reciever Number" />
                                                <span asp-validation-for="ReceiverInfo.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Customerinfo.Email" class="control-label">Email</label>
                                                <input asp-for="Customerinfo.Email" id="email" class="form-control" placeholder="Enter Sender Email" />
                                                <span asp-validation-for="Customerinfo.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ReceiverInfo.Email" class="control-label">Email</label>
                                                <input asp-for="ReceiverInfo.Email" id="email1" class="form-control" placeholder="Enter Reciever Email" />
                                                <span asp-validation-for="ReceiverInfo.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Customerinfo.Address" class="control-label">Address</label>
                                                <input asp-for="Customerinfo.Address" id="address" class="form-control" placeholder="Enter Sender Address" />
                                                <span asp-validation-for="Customerinfo.Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ReceiverInfo.Address" class="control-label">Address</label>
                                                <input asp-for="ReceiverInfo.Address" id="address1" class="form-control" placeholder="Enter Reciever Address" />
                                                <span asp-validation-for="ReceiverInfo.Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Customerinfo.Note" class="control-label">Note</label>
                                                <input asp-for="Customerinfo.Note" id="note" class="form-control" placeholder="Enter Note" />
                                                <span asp-validation-for="Customerinfo.Note" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ReceiverInfo.Note" class="control-label">Message</label>
                                                <input asp-for="ReceiverInfo.Note" id="note1" class="form-control" placeholder="Enter Note" />
                                                <span asp-validation-for="ReceiverInfo.Note" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Customerinfo.city" class="control-label">City</label>
                                                <select asp-for="Customerinfo.city" id="city" class="form-control">
                                                    <option value="-1">Select City</option>
                                                    @if (ViewBag.CityList != null)
                                                    {
                                                        @foreach (var city in ViewBag.CityList)
                                                        {
                                                            <option value="@city.Value">@city.Name</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="">No cities available</option>
                                                    }

                                                </select>
                                                <span asp-validation-for="Customerinfo.city" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ReceiverInfo.city" class="control-label">City</label>
                                                <select asp-for="ReceiverInfo.city" id="city1" class="form-control">
                                                    <option value="-1">Select City</option>
                                                    @if (ViewBag.CityList != null)
                                                    {
                                                        @foreach (var city in ViewBag.CityList)
                                                        {
                                                            <option value="@city.Value">@city.Name</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="">No cities available</option>
                                                    }

                                                </select>
                                                <span asp-validation-for="ReceiverInfo.city" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 ml-5">
                                    <div>
                                        <h3 class="text-center text-dark">Parcel Info</h3><hr>
                                    </div>
                                    
                                    <div class="">
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label asp-for="Percelinfo.ParcelType" class="control-label">Parcel Type</label>
                                                <select asp-for="Percelinfo.ParcelType" id="percel" class="form-control">
                                                    <option value="-1">Select ParcelType</option>
                                                    @if (ViewBag.PercelList != null)
                                                    {
                                                        @foreach (var city in ViewBag.PercelList)
                                                        {
                                                            <option value="@city.Value">@city.Name</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="">Not available</option>
                                                    }

                                                </select>
                                                <span asp-validation-for="Percelinfo.ParcelType" class="text-danger"></span>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label asp-for="Percelinfo.Note" class="control-label">Note</label>
                                                <input asp-for="Percelinfo.Note" id="note2" class="form-control" placeholder="Enter Note" />
                                                <span asp-validation-for="Percelinfo.Note" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <label class="control-label">Charge(৳)</label>
                                                <input id="charge" class="form-control" onkeyup="calculateTotal(this)" autocomplete="off" placeholder="Enter Charge" />
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label asp-for="Percelinfo.Weight" class="control-label">Quantity</label>
                                                <input asp-for="Percelinfo.Weight" id="weight" class="form-control" autocomplete="off" onkeyup="calculateTotal(this)" placeholder="Enter Weight" />
                                                <span asp-validation-for="Percelinfo.Weight" class="text-danger"></span>
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label asp-for="Percelinfo.Price" class="control-label">Price</label>
                                                <input asp-for="Percelinfo.Price" id="price" class="form-control" readonly />
                                                <span asp-validation-for="Percelinfo.Price" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="mr-auto ">
                                    <a asp-action="Index" class="btn btn-primary text-end">Back to List</a>
                                </div>
                                <div class="form-group  ">
                                    <input type="submit" value="Clear" id="clearButton" class="btn btn-danger  " />
                                    <input type="submit" value="Create" class="btn btn-primary  " />
                                    

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/js/alert.js"></script>


<script>
    $(document).ready(function () {
        $('#clearButton').click(function () {
            // Clear the form
            $('#name').val('');
            $('#name1').val('');
            $('#p_number').val('');
            $('#p_number1').val('');
            $('#email').val('');
            $('#email1').val('');
            $('#address').val('');
            $('#address1').val('');
            $('#note').val('');
            $('#note1').val('');
            $('#city').val('');
            $('#city1').val('');
            $('#charge').val('');
            $('#percel').val('');
            $('#weight').val('');
            $('#price').val('');
            $('#note2').val('');
        });
    });
</script>
<script>
    function calculateTotal(element) {

        const itemRow = element.closest('#price-items');

        const Weight = parseFloat(document.getElementById('weight').value) || 0;
        const Charge = parseFloat(document.getElementById('charge').value) || 0;
        const Type = document.getElementById('percel').value;
        const chargeCal = calculateCharge(Type, Weight, Charge);
        

        const price = document.getElementById('price');
        price.value = chargeCal;
        //itemRow.querySelector('input[name*="Total"]').value = total;

    }

    function calculateCharge(Type, Weight, Charge) {
        switch (Type) {
            case 'Paper':
                return (Weight * Charge);
            case 'Tool':
                return (Weight * Charge);
            case 'Chemical':
                return (Weight * Charge);
            default:
                return 0;
        }

    }
</script>



